
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <ul class="list-unstyled profile">
      <% @users.each do |user| %>
       
          <% if user.profile %>
            <!--<%= link_to user do %>-->
              <li>
                <div class="well row <%= cycle('white-bg','') %>">
                  <div class="col-sm-4 text-center">
                    <% if user.profile.avatar %>
                      <%= link_to user do %>
                        <%= image_tag user.profile.avatar.url(:thumb) %>
                      <% end %>
                    <% else %>
                      <img alt="default-avatar" src="../default-avatar.png">
                    <% end %>
                  </div>
                  
                  <div class="">
                    <%= link_to user do %>
                      <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                    <% end %>
                    <p><%= user.profile.job_title %></p>
                  </div>
                </div>
              </li>
            <!--<% end %> -->
          <% end %>
     
      <% end %>
    </ul>  
  </div>
</div>